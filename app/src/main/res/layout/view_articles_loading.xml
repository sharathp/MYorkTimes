<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight">

        <ProgressBar
            android:id="@+id/pb_loading_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/ic_progress_indeterminate"/>

        <TextView
            android:id="@+id/tv_article_end_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_loading_indicator_height"
            android:gravity="center"
            android:text="@string/message_end_of_articles"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="gone"/>
    </FrameLayout>

</android.support.v7.widget.CardView>
